<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/whatsapp_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#128C7E" /> <!-- Darker WhatsApp green when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#25D366" /> <!-- WhatsApp green -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>