<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background World Map Pattern -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/world_map_pattern"
        android:alpha="0.1"
        android:scaleType="centerCrop" />

    <!-- Main ScrollView to contain all content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DoctorCubes"
                    android:textColor="@color/primary_dark_color"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_whatsapp"
                        android:background="@drawable/circle_flag_background"
                        app:tint="@color/accent_color" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_call"
                        android:background="@drawable/circle_flag_background"
                        app:tint="@color/accent_color" />
                </LinearLayout>
            </RelativeLayout>

            <!-- 1. Special Offers Section (Horizontal Slider) -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/offers_viewpager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="8dp" />


            <!-- 2. Countries Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Countries to Study MBBS Abroad"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark_color" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Country"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_color"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="4dp"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true">

                        <!-- Russia -->
                        <LinearLayout
                            android:id="@+id/country_russia"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/flag_russia"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleShape"
                                android:background="@drawable/circle_flag_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Russia"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary_color"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <!-- Georgia -->
                        <LinearLayout
                            android:id="@+id/country_georgia"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/flag_georgia"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleShape"
                                android:background="@drawable/circle_flag_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Georgia"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary_color"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <!-- Kazakhstan -->
                        <LinearLayout
                            android:id="@+id/country_kazakhstan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/flag_kazakhstan"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleShape"
                                android:background="@drawable/circle_flag_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kazakhstan"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary_color"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <!-- Nepal -->
                        <LinearLayout
                            android:id="@+id/country_nepal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/flag_nepal"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleShape"
                                android:background="@drawable/circle_flag_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nepal"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary_color"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <!-- China -->
                        <LinearLayout
                            android:id="@+id/country_china"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/flag_china"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleShape"
                                android:background="@drawable/circle_flag_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="China"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary_color"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <!-- Uzbekistan -->
                        <LinearLayout
                            android:id="@+id/country_uzbekistan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/flag_uzbekistan"
                                android:padding="4dp"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleShape"
                                android:background="@drawable/circle_flag_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uzbekistan"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary_color"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_color"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/call_now_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/whatsapp_button_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/ripple_color">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_call"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Call Now"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@color/button_text"
                                    android:layout_marginTop="6dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/whatsapp_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/whatsapp_button_color"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/ripple_color">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="14dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_whatsapp"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chat on WhatsApp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@color/button_text"
                                    android:layout_marginTop="6dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 5. Features Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Services"
                    android:textColor="@color/primary_dark_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/features_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false" />            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>