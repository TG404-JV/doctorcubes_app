                            android:orientation="horizontal">

                            <ImageView
                                style="@style/RankingIconImageView" />

                            <TextView
                                style="@style/RankingTextView"
                                android:text="4.4" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/country_uzbekistan_card"
                style="@style/CountryCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
