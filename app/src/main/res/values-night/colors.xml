<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values-night/colors.xml (snippet) -->
    <color name="primary_color">#64B5F6</color>         <!-- Slightly brighter blue -->
    <color name="primary_dark_color">#0277BD</color>    <!-- Richer dark blue -->
    <color name="primary_light_color">#90CAF9</color>   <!-- Softer light blue -->
    <!-- Accent Colors -->
    <color name="accent_color">#FFB300</color>          <!-- Shifted to Amber for better contrast -->

    <!-- Background and Text Colors -->
    <color name="background_color">#212121</color>      <!-- Dark Gray: Base background -->
    <color name="card_background">#424242</color>       <!-- Darker Gray: Cards -->
    <color name="text_primary_color">#E0E0E0</color>    <!-- Light Gray: Primary text -->
    <color name="text_secondary_color">#B0BEC5</color>   <!-- Light Gray-Blue: Secondary text -->

    <!-- Status Colors -->
    <color name="success_color">#81C784</color>         <!-- Lighter Green: Success -->
    <color name="error_color">#EF5350</color>          <!-- Lighter Red: Error -->
    <color name="warning_color">#FFB300</color>         <!-- Amber: Warning (unchanged) -->

    <!-- Button Colors -->
    <color name="button_primary">@color/primary_color</color>
    <color name="button_primary_pressed">@color/primary_dark_color</color>
    <color name="button_accent">@color/accent_color</color>
    <color name="button_accent_pressed">#F57C00</color> <!-- Darker orange (unchanged) -->
    <color name="button_disabled">#616161</color>       <!-- Dark Gray: Disabled state -->
    <color name="button_text">@color/white</color>      <!-- White text (unchanged) -->
    <color name="button_disabled_text">#757575</color>   <!-- Medium Gray: Disabled text -->

    <!-- Gradient Colors (for toolbar/buttons) -->
    <color name="gradient_start">@color/primary_dark_color</color>
    <color name="gradient_end">@color/primary_color</color> <!-- Inverted for dark mode -->

    <!-- UI Element Colors -->
    <color name="icon_tint">@color/primary_light_color</color> <!-- Lighter tint for icons -->
    <color name="divider_color">#616161</color>             <!-- Dark Gray: Dividers -->
    <color name="hint_color">#90A4AE</color>               <!-- Gray-Blue: Hints -->

    <!-- Base Colors -->
    <color name="white">#FFFFFF</color>                    <!-- Unchanged -->
    <color name="black">#000000</color>                    <!-- Unchanged -->
    <color name="transparent">#00000000</color>            <!-- Unchanged -->

    <!-- Specific Button Colors -->
    <color name="whatsapp_button_color">#4CAF50</color>     <!-- Lighter Green for dark -->
    <color name="call_button_color">#42A5F5</color>        <!-- Lighter Blue -->
    <color name="ripple_color">#33FFFFFF</color>           <!-- Unchanged: subtle ripple -->

    <!-- Icon background colors for each service -->
    <color name="university_icon_bg">#263238</color>        <!-- Dark Blue-Gray -->
    <color name="scholarship_icon_bg">#2E7D32</color>       <!-- Dark Green -->
    <color name="visa_icon_bg">#BF360C</color>             <!-- Dark Orange -->
    <color name="tracking_icon_bg">#4527A0</color>          <!-- Dark Purple -->
    <color name="support_icon_bg">#B71C1C</color>           <!-- Dark Red -->

    <!-- Icon tint colors for each service -->
    <color name="university_icon_tint">#81D4FA</color>      <!-- Light Blue -->
    <color name="scholarship_icon_tint">#A5D6A7</color>     <!-- Light Green -->
    <color name="visa_icon_tint">#FFCC80</color>            <!-- Light Orange -->
    <color name="tracking_icon_tint">#B39DDB</color>        <!-- Light Purple -->
    <color name="support_icon_tint">#EF9A9A</color>         <!-- Light Red -->
</resources>