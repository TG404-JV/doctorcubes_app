<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/call_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1565C0" /> <!-- Darker blue when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Material blue -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>