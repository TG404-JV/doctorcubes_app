                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            style="@style/CountryNameTextView"
                            android:text="Kazakhstan" />

                        <TextView
