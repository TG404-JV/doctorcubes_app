<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="Settings"
            app:titleTextAppearance="@style/ToolbarTitleStyle"
            app:titleTextColor="@color/text_on_primary">


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Profile Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/gradient_primary_start">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/doctor_cubes_logo"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Smith"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_on_primary"/>

                        <TextView
                            android:id="@+id/user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="john.smith@example.com"
                            android:textSize="14sp"
                            android:textColor="@color/text_on_primary"
                            android:alpha="0.8"/>

                        <TextView
                            android:id="@+id/user_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student â€¢ USA Aspirant"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/white"
                            android:alpha="0.9"/>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Account Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/account_settings_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Settings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_color"/>

                    <!-- Profile Settings -->
                    <LinearLayout
                        android:id="@+id/profile_settings_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_manage"
                            app:tint="@color/icon_tint_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Edit Profile Details"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/text_secondary_color"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            app:tint="@color/icon_tint_secondary" />
                    </LinearLayout>

                    <!-- Notification Settings -->
                    <LinearLayout
                        android:id="@+id/notification_settings_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_popup_reminder"
                            app:tint="@color/icon_tint_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notification Preferences"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/text_secondary_color"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            app:tint="@color/icon_tint_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- App Settings Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Settings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_color"/>

                    <!-- Theme Settings -->
                    <LinearLayout
                        android:id="@+id/theme_settings_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_gallery"
                                app:tint="@color/icon_tint_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Theme"
                                android:textSize="16sp"
                                android:layout_marginStart="16dp"
                                android:textColor="@color/text_secondary_color"/>
                        </LinearLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <!-- Light Theme -->
                                <LinearLayout
                                    android:id="@+id/light_theme"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginEnd="16dp"
                                    android:gravity="center">

                                    <FrameLayout
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:background="@drawable/theme_option_background"
                                        android:padding="4dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/white"/>

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@android:drawable/ic_menu_day"
                                            app:tint="@color/primary_color"/>
                                    </FrameLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Light"
                                        android:textSize="12sp"
                                        android:layout_marginTop="4dp"
                                        android:textColor="@color/text_secondary_color"/>
                                </LinearLayout>

                                <!-- Dark Theme -->
                                <LinearLayout
                                    android:id="@+id/dark_theme"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginEnd="16dp"
                                    android:gravity="center">

                                    <FrameLayout
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:background="@drawable/theme_option_background"
                                        android:padding="4dp">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/text_primary_color"/>

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@android:drawable/ic_menu_month"
                                            app:tint="@color/white"/>
                                    </FrameLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dark"
                                        android:textSize="12sp"
                                        android:layout_marginTop="4dp"
                                        android:textColor="@color/text_secondary_color"/>
                                </LinearLayout>

                                <!-- System Theme -->
                                <LinearLayout
                                    android:id="@+id/system_theme"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <FrameLayout
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:background="@drawable/theme_option_background_selected"
                                        android:padding="4dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@color/white"/>

                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="@color/text_primary_color"/>
                                        </LinearLayout>

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@android:drawable/ic_menu_set_as"
                                            app:tint="@color/primary_color"/>
                                    </FrameLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="System"
                                        android:textSize="12sp"
                                        android:layout_marginTop="4dp"
                                        android:textColor="@color/text_secondary_color"/>
                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <!-- Language Settings -->
                    <LinearLayout
                        android:id="@+id/language_settings_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_sort_alphabetically"
                            app:tint="@color/icon_tint_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Language"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/text_secondary_color"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textSize="14sp"
                            android:textColor="@color/accent_color"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            app:tint="@color/icon_tint_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Support & Help Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support and Help"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_color"/>

                    <!-- About -->
                    <LinearLayout
                        android:id="@+id/about_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="@color/icon_tint_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="About DoctorCubes"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/text_secondary_color"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            app:tint="@color/icon_tint_secondary" />
                    </LinearLayout>

                    <!-- Privacy Policy -->
                    <LinearLayout
                        android:id="@+id/privacy_policy_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_lock_lock"
                            app:tint="@color/icon_tint_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Privacy Policy"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/text_secondary_color"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            app:tint="@color/icon_tint_secondary" />
                    </LinearLayout>

                    <!-- FAQ -->
                    <LinearLayout
                        android:id="@+id/faq_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_help"
                            app:tint="@color/icon_tint_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Frequently Asked Questions"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/text_secondary_color"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            app:tint="@color/icon_tint_secondary" />
                    </LinearLayout>

                    <!-- Contact Support -->
                    <LinearLayout
                        android:id="@+id/contact_support_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_background"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_call"
                            app:tint="@color/icon_tint_primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contact Support"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/text_secondary_color"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_back"
                            android:rotation="180"
                            app:tint="@color/icon_tint_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Consultation Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/premium_card_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:background="@drawable/circular_background"
                            android:padding="12dp"
                            app:tint="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Need Personalized Help?"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary_color"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Schedule a free consultation with our education experts"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/text_secondary_color"/>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/schedule_consultation_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Schedule Consultation"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="@color/text_on_primary"
                        android:backgroundTint="@color/accent_color"
                        app:cornerRadius="12dp"
                        android:layout_marginTop="16dp"
                        android:paddingVertical="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logout Button -->
            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/text_on_primary"
                android:backgroundTint="@color/button_error"
                app:cornerRadius="12dp"
                android:layout_marginTop="8dp"
                android:paddingVertical="12dp"/>

            <!-- App Version -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DoctorCubes v2.1.0"
                android:textSize="14sp"
                android:textColor="@color/text_tertiary_color"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>