                            <ImageView
                                style="@style/RankingIconImageView" />

                            <TextView
                                style="@style/RankingTextView"
                                android:text="4.2" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/country_nepal_card"
