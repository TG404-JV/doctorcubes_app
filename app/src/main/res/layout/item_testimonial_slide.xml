<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_quote"
            app:tint="@color/primary_color" />

        <TextView
            android:id="@+id/testimonial_text"
            style="@style/TestimonialTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DoctorCubes made my dream of studying medicine abroad come true. Their guidance throughout the application process was invaluable." />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/testimonial_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleShape"
                    android:background="@drawable/circle_background"
                    tools:src="@tools:sample/avatars" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/testimonial_flag"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|end"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleShape"
                    android:background="@drawable/circular_background"
                    tools:src="@drawable/flag_russia" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/testimonial_name"
                    style="@style/TestimonialNameTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith" />

                <TextView
                    android:id="@+id/testimonial_university"
                    style="@style/TestimonialUniversityTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sechenov University" />

                <TextView
                    android:id="@+id/testimonial_batch"
                    style="@style/TestimonialBatchTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch 2023" />
            </LinearLayout>
        </LinearLayout>

        <RatingBar
            android:id="@+id/testimonial_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/progress_primary"
            android:rating="5"
            android:stepSize="0.5" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
