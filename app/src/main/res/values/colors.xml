<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary Colors -->
    <color name="primary_color">#0288D1</color>         <!-- Deep Sky Blue: Trust and education -->
    <color name="primary_dark_color">#01579B</color>    <!-- Darker variant for depth -->
    <color name="primary_light_color">#4FC3F7</color>   <!-- Lighter variant for highlights -->

    <!-- Accent Colors -->
    <color name="accent_color">#FFA726</color>          <!-- Vibrant Orange: Energy and action -->

    <!-- Background and Text Colors -->
    <color name="background_color">#F5F7FA</color>      <!-- Light Gray-Blue: Clean and neutral -->
    <color name="card_background">#FFFFFF</color>       <!-- Pure White: Crisp cards -->
    <color name="text_primary_color">#212121</color>    <!-- Dark Gray: Readable primary text -->
    <color name="text_secondary_color">#757575</color>   <!-- Medium Gray: Subtle secondary text -->

    <!-- Status Colors -->
    <color name="success_color">#4CAF50</color>         <!-- Green: Success feedback -->
    <color name="error_color">#F44336</color>          <!-- Red: Error feedback -->
    <color name="warning_color">#FFB300</color>         <!-- Amber: Warning feedback -->

    <!-- Button Colors -->
    <color name="button_primary">@color/primary_color</color>
    <color name="button_primary_pressed">@color/primary_dark_color</color>
    <color name="button_accent">@color/accent_color</color>
    <color name="button_accent_pressed">#F57C00</color> <!-- Darker orange for pressed state -->
    <color name="button_disabled">#B0BEC5</color>       <!-- Gray: Disabled state -->
    <color name="button_text">@color/white</color>      <!-- White text on buttons -->
    <color name="button_disabled_text">#ECEFF1</color>  <!-- Light Gray: Disabled text -->

    <!-- Gradient Colors (for toolbar/buttons) -->
    <color name="gradient_start">@color/primary_color</color>
    <color name="gradient_end">@color/primary_dark_color</color>

    <!-- UI Element Colors -->
    <color name="icon_tint">@color/primary_color</color>     <!-- Icons match primary color -->
    <color name="divider_color">#E0E0E0</color>             <!-- Light Gray: Dividers -->
    <color name="hint_color">#B0BEC5</color>                <!-- Gray: Hints and placeholders -->

    <!-- Base Colors -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="transparent">#00000000</color>

    <color name="whatsapp_button_color">#25D366</color>  <!-- WhatsApp Green -->
    <color name="call_button_color">#1976D2</color>      <!-- Material Blue -->
    <color name="ripple_color">#33FFFFFF</color>

    <!-- Icon background colors for each service -->
    <color name="university_icon_bg">#E3F2FD</color>        <!-- Light Blue -->
    <color name="scholarship_icon_bg">#E8F5E9</color>       <!-- Light Green -->
    <color name="visa_icon_bg">#FFF3E0</color>              <!-- Light Orange -->
    <color name="tracking_icon_bg">#EDE7F6</color>          <!-- Light Purple -->
    <color name="support_icon_bg">#FFEBEE</color>           <!-- Light Red -->

    <!-- You could also update the tint colors if desired -->
    <color name="university_icon_tint">#1565C0</color>      <!-- Blue -->
    <color name="scholarship_icon_tint">#2E7D32</color>     <!-- Green -->
    <color name="visa_icon_tint">#EF6C00</color>            <!-- Orange -->
    <color name="tracking_icon_tint">#6200EA</color>        <!-- Purple -->
    <color name="support_icon_tint">#D32F2F</color>         <!-- Red -->


</resources>